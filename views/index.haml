:javascript
  // It shows weekly data
  var dataset = [{ x:0, y:10 },
                 { x:1, y:20 },
                 { x:2, y:18 },
                 { x:3, y:30 },
                 { x:4, y:22 },
                 { x:5, y:50 },
                 { x:6, y:70 }];
  var stacked_dataset = [{ x:0, y:8 },
                 { x:1, y:30 },
                 { x:2, y:10 },
                 { x:3, y:3 },
                 { x:4, y:1 },
                 { x:5, y:5 },
                 { x:6, y:20 }];
  var width = 300;
  var height = 150;

  var bar_graph = new Rickshaw.Graph({
    element: document.querySelector("div#bar_graph"),
    width: width,
    height: height,
    renderer: 'bar',
    series: [{
        color: 'steelblue',
        data: dataset,
        name: 'Taipei'
      },{
        color: 'lightblue',
        data: stacked_dataset,
        name: 'Japan'
    }]
  });

  var xAxis = new Rickshaw.Graph.Axis.Time({
    graph: bar_graph
  });

  var yAxis = new Rickshaw.Graph.Axis.Y({
    graph: bar_graph
  });

  var hoverDetail = new Rickshaw.Graph.HoverDetail({
    graph: bar_graph,
    xFormatter: function(x) { return x + "day" },
    yFormatter: function(y) { return y + " $"}
  });

  //  var yAxis = new Rickshaw.Graph.Axis.Y({
  //    graph: line_graph
  //  });

  bar_graph.render();

  var line_graph = new Rickshaw.Graph({
    element: document.querySelector("div#line_graph"),
    renderer: 'line',
    width: width,
    height: height,
    series: [{
      data: [ {x:0, y:10}, {x:1, y:20}, {x:3, y:150}, {x:4, y:80}],
      name: 'Taipei',
      color: 'steelblue'
    }, {
      data: [ {x:0, y:5}, {x:1, y:40}, {x:3, y:1000}, {x:4, y:60}],
      name: 'Japan',
      color: 'lightblue'
    }]
  });


  var line_xAxis = new Rickshaw.Graph.Axis.Time({
    graph: line_graph
  });

  var line_yAxis = new Rickshaw.Graph.Axis.Y({
    graph: line_graph
  });

  line_graph.render();
